<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lucky Pets United</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <div class="wrapper">
      <header>
        <img src="/images/puppypaws.png" alt="puppy paw" />

        <div class="navigation">
          <h1>
            <a href="/">Lucky Pets United </a>
          </h1>

          <nav>
            {{#if loggedIn}}
              <a href="/newpet">Add Pet</a>
              <button id="logout" class="btn-no-style">Logout</button>
            {{else}}
              <a href="/login">Login</a>
              <a href="/signup">Sign Up</a>
            {{/if}}
          </nav>
        </div>
      </header>

      <main>
        {{{body}}}
      </main>
      <footer>
        {{! Thanks for visiting! }}
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>